  # Rails itself
  gem 'rails', '~>3.2.1'

  # RSpec
  gem 'rspec'
  gem 'rspec-rails'

  # Cucumber
  gem 'cucumber-rails', :require => false
  gem 'sqlite3'
  gem 'database_cleaner'

  # Capybara-webkit
  gem 'capybara-webkit'

end
